<?xml version="1.0" encoding="UTF-8"?>

<odoo>


    <!-- View kanban joint buying purchase order -->
    <record model="ir.ui.view" id="joint_buying_purchase_order_kanban_view">
        <field name="name">joint.buying.purchase.order.tree</field>
        <field name="model">joint.buying.purchase.order</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile kanban_joint_buying_purchase_order_wrap">
                <field name="line_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click o_kanban_get_form" style="width: 100% !important;">
                            <h3>Deadline : </h3>
                            <div class="row">
                                <div class="col-4">
                                    <strong>Supplier : <field name="supplier_id"/></strong>
                                </div>
                                <div class="col-4">
                                    <strong>Pivot activity : <field name="pivot_activity"/></strong>
                                </div>
                                <div class="col-4">
                                    <strong>Devilery : </strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <strong>Next order : </strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <strong>Products</strong>   
                                </div>
                                <div class="col-6">
                                    <strong>Quantity</strong>   
                                </div>
                            </div>
                            <hr/>
                            <t t-foreach="record.line_ids.raw_value" t-as="line">
                                <div class="row">
                                    <div class="col-6">
                                        <t t-esc="line.product_id[1]"/>
                                    </div>
                                    <div class="col-6">
                                        <t t-esc="line.quantity"/>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- Search view to filter Kanban view order -->
    <record id="search_view_joint_buying_purchase_order_filter_by_tour" model="ir.ui.view">
      <field name="name">joint.buying.search.tour.select.template</field>
      <field name="model">joint.buying.purchase.order</field>
      <field name="arch" type="xml">
        <search string="Search joint buying purchase order">
          <field name="customer_id" string="Customer : "/>
          <field name="supplier_id" string="Supplier : "/>
          <field name="tour_id" string="Tour : "/>
          <filter string="My Favorites" name="my_joint_buying_purchase_orders" domain="[('favorite_user_ids', 'in', uid)]"/>
          <separator/>
          <filter string="Followed by Me" name="followed_by_me" domain="[('message_is_follower','=',True)]"/>
          <separator/>
          <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
        </search>
      </field>
    </record>
    

    <!-- Action to show view kanban joint purchase order --> 
    <record id="open_view_kanban_joint_buying_purchase_order_by_tour" model="ir.actions.act_window">
        <field name="name">Joint Buying Purchase Order</field>
        <field name="res_model">joint.buying.purchase.order</field>
        <field name="view_type">form</field>
        <field name="domain">[]</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="joint_buying_purchase_order_kanban_view"/>
        <field name="search_view_id" ref="search_view_joint_buying_purchase_order_filter_by_tour"/>
        <field name="context">{
            'search_default_tour_id': [active_id],
            'default_tour_id': active_id,
        }
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Joint purchase order.
            </p>
        </field>
    </record>


    <!-- Create a joint buying purchase order -->
    <record model="ir.ui.view" id="joint_buying_purchase_order_form_view">
        <field name="name">joint.buying.purchase.order.form</field>
        <field name="model">joint.buying.purchase.order</field>
        <field name="arch" type="xml">
            <form string="Tour form">
                <sheet string="Represents a tour">
                    <h1>Purchase order of : <field name="tour_id" readonly="1"/></h1>
                    <group col="3">
                        <field name="supplier_id"/>
                    </group>
                    <group col="3">
                        <field name="customer_id"/>
                    </group>
                    <notebook>
                        <page name="lines" string="Order line">
                            <field name="line_ids">
                                <tree editable="botttom">
                                    <field name="product_id" string="Product"/>                                                       
                                    <field name="quantity" string="Quantity"/>
                                </tree> 
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>



</odoo>
